#include <string.h>

void	ft_bzero(void *s, size_t n)
{
	char	*s1;
	size_t	i;

	i = 0;
	s1 = s;
	while(s1 && i <= n)
	{
		s1[i] = '\0';
	}
	return (s1);
}
