void	*memccpy(void *dst, const void *src, int c, size_t n)
{
	char *dest;
	char *sc;
	size_t i;

	sc = (char *)src;
	i = 0;

	while(i < n && sc[i] != c)
	{
		dest[i] = sc[i]
		i++;
		if(i == n)
			return (NULL);
	}
	return (0);
}
